<Window x:Class="Typer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Typer"
        mc:Ignorable="d"
        Title="Typer" Height="394" Width="700"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid Name="MainGrid" Background="AliceBlue">

        <Border 
            x:Name="mainRect"
            BorderThickness="0" 
            Grid.Row="0"
            CornerRadius="5,5,5,5" 
            BorderBrush="Black" 
            Background="#EAEAEA" 
            Margin="67,62,67,62"/>

        <RichTextBox x:Name="mainText" 
                 HorizontalAlignment="Center"    
                 VerticalAlignment="Top" 
                 Width="500" FontSize="18" Height="158" Margin="0,89,0,0" 
                 FontFamily="Bahnschrift" 
                 Background="{x:Null}" BorderBrush="{x:Null}" SelectionTextBrush="{x:Null}" SelectionBrush="{x:Null}" SelectionOpacity="0"
                 IsReadOnly="True"
                 FontStretch="Medium"
                 IsHitTestVisible="False"/>

        <Button x:Name="RfrshBtn"
                Click="RfrshBtn_Click"
                Content="Refresh" 
                HorizontalAlignment="Left" 
                Margin="509,238,0,0" 
                VerticalAlignment="Top" 
                FontFamily="Bahnschrift" 
                BorderBrush="Black"
                BorderThickness="2"
                FontSize="16" 
                Foreground="Black" 
                Width="80"
                Height="22">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#FFDCDCDC"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFC5C5C5"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>

        <Rectangle 
            x:Name="entryRect"
            HorizontalAlignment="Left" 
            Height="30" Margin="115,234,0,0" 
            VerticalAlignment="Top" 
            Width="384" 
            Fill="#FFFAFAFA"
            RadiusX="6"
            RadiusY="6"/>

        <TextBox x:Name="entryBox"
                 Height="30" Margin="123,237,196,0" 
                 TextWrapping="NoWrap" 
                 AcceptsReturn="False"
                 VerticalAlignment="Top" 
                 FontFamily="Bahnschrift" 
                 FontSize="18" 
                 BorderBrush="{x:Null}" 
                 SelectionBrush="{x:Null}" 
                 SelectionTextBrush="{x:Null}" 
                 Background="{x:Null}"
                 PreviewKeyDown="EntryBox_KeyDown">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
            <TextBox.Template>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <ScrollViewer Name="PART_ContentHost"/>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>

        <Rectangle 
            x:Name="recordRect"
            HorizontalAlignment="Left" 
            Height="22" 
            Margin="86,34,0,0" 
            VerticalAlignment="Top" 
            Width="169"
            RadiusX="3"
            RadiusY="3" Fill="#FFEAEAEA"/>

        <Label 
            x:Name="accLabel"
            Content="Acc:" 
            HorizontalAlignment="Left" 
            Margin="87,31,0,0" 
            VerticalAlignment="Top"
            FontFamily="Bahnschrift" 
            FontSize="16"/>

        <Label 
            x:Name="accNum"
            HorizontalAlignment="Left" 
            Margin="123,31,0,0" 
            VerticalAlignment="Top"
            FontFamily="Bahnschrift" 
            FontSize="16"/>

        <Label 
            x:Name="wpmLabel"
            Content="WPM:" 
            HorizontalAlignment="Left" 
            Margin="165,31,0,0" 
            VerticalAlignment="Top"
            FontFamily="Bahnschrift" 
            FontSize="16"/>

        <Label 
            x:Name="wpmNum" 
            HorizontalAlignment="Left" 
            Margin="209,31,0,0" 
            VerticalAlignment="Top"
            FontFamily="Bahnschrift" 
            FontSize="16"/>

    </Grid>
</Window>
